@page
@model InventoryManagement.Pages.Login.IndexModel
@{
}

<div class="bodyFrame">
    <div class="page-header">
        <h2>LOGIN</h2>
    </div>
    <form method="post">
        <div class="inputField">
            <label for="email">Email</label>
            <input type="email" id="email" name="userEmail"
                   value="@(string.IsNullOrEmpty(Model.UserEmail) ? string.Empty : Model.UserEmail)" />
        </div>

        <div class="inputField">
            <label for="password">Password</label>
            <input type="password" id="password" name="userPassword"
                   value="@(string.IsNullOrEmpty(Model.UserPassword) ? string.Empty : Model.UserPassword)" />
        </div>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p class="info-text-error">@Model.ErrorMessage</p>
        }

        @if (!string.IsNullOrEmpty(Model.Info))
        {
            <p class="info-text-approved">@Model.Info</p>
        }

        <input class="submit-button" type="submit" value="Login">
    </form>
    <div>
        New to InventoryManagement? <span class="external-link-wrapper"><a href="/register">Create an account</a></span>
    </div>
</div>

@section Styling{
    <style>
        .bodyFrame {
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 82vh;
        }

        .page-header {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        form {
            width: 45%;
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
            align-items: center;
            height: 40%;
        }

        .inputField {
            width: 100%;
            display: flex;
            justify-content: space-between;
        }

            .inputField > input {
                width: 60%;
                padding-left: 1rem;
            }

        label {
            font-weight: bold;
        }

        input {
            border-radius: 8px;
        }

            input:focus {
                background-color: azure
            }

        .info-text-error {
            background-color: red;
            color: white;
        }

        .info-text-approved {
            background-color: forestgreen;
            color: white;
        }

        .submit-button {
            width: 100%;
            color: white;
            background-color: dodgerblue;
            font-weight: bold;
            font-size: medium;
            height: 40px;
            margin-top: 30px;
        }

            .submit-button:hover {
                background-color: blue;
            }

        .external-link-wrapper {
            color: dodgerblue;
            font-weight: bold;
        }

            .external-link-wrapper > a {
                text-decoration: none;
            }
    </style>
}