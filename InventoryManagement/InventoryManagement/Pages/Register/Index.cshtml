@page
@model InventoryManagement.Pages.Register.IndexModel
@{
}

<div class="bodyFrame">
    <div class="page-header">
        <h2>REGISTER</h2>
        <p>New here? Register an account to use this product.</p>
    </div>
    <form method="post">
        <div class="inputField">
            <label for="userEmail">Email</label>
            <input type="email" name="userEmail" />
        </div>

        <div class="inputField">
            <label for="userName">User Name</label>
            <input type="text" name="userName" />
        </div>

        <div class="inputField">
            <label for="userPassword">Create a Password</label>
            <input type="password" name="userPassword" />
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p class="info-text-error">@Model.ErrorMessage</p>
        }

        <input class="submit-button" type="submit" value="Register">
    </form>

    <div>
        Already have an account? <span class="external-link-wrapper"><a href="/login">Sign in</a></span>
    </div>
</div>

@section Styling{
    <style>
        .bodyFrame {
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 82vh;
        }

        .page-header {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .info-text-error {
            background-color: red;
            color: white;
        }

        .info-text-approved {
            background-color: forestgreen;
            color: white;
        }

        form {
            width: 45%;
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
            align-items: center;
            height: 55%;
        }

        .inputField {
            width: 100%;
            display: flex;
            justify-content: space-between;
        }

            .inputField > input {
                width: 60%;
                padding-left: 1rem;
            }

        label {
            font-weight: bold;
        }

        input {
            border-radius: 8px;
        }

            input:focus {
                background-color: azure
            }

        .submit-button {
            width: 100%;
            color: white;
            background-color: dodgerblue;
            font-weight: bold;
            font-size: medium;
            height: 40px;
            margin-top: 30px;
        }

            .submit-button:hover {
                background-color: blue;
            }

        .external-link-wrapper{
            color: dodgerblue;
            font-weight: bold;
        }

        .external-link-wrapper > a {
            text-decoration: none;
        }

    </style>
}